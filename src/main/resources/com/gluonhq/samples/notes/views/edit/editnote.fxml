<?xml version="1.0" encoding="UTF-8"?>


<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<View fx:id="edition"  xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gluonhq.samples.notes.views.edit.EditNotePresenter">
   <center>
      <VBox prefHeight="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="title" promptText="Title" styleClass="light" />
            <TextArea fx:id="comment" prefHeight="150.0" promptText="Comment..." wrapText="true" styleClass="light, full-width" />
            <HBox alignment="TOP_RIGHT" prefHeight="55.0" spacing="5.0" styleClass="top-box">
               <children>
                  <Button id="cancel-button" fx:id="cancel" mnemonicParsing="false" text="Cancel" styleClass="light, flat" />
                  <Button id="submit-button" fx:id="submit" defaultButton="true" mnemonicParsing="false" text="Submit" styleClass="light, flat" />
               </children>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</View>
