<?xml version="1.0" encoding="UTF-8"?>


<?import com.gluonhq.charm.glisten.mvc.View?>
<?import com.gluonhq.charm.glisten.control.Icon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>

<View xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.beeaware.views.filter.FilterHivePresenter">
   <top>
      <ToolBar fx:id="toolBar" styleClass="top-box">
        <items>
            <TextField fx:id="searchField" promptText="Filter Hive" />
            <Button mnemonicParsing="false" onAction="#search">
               <graphic>
                  <Icon content="SEARCH" />
               </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#close">
               <graphic>
                  <Icon content="CLEAR" />
               </graphic>
            </Button>
        </items>
      </ToolBar>
   </top>
</View>
